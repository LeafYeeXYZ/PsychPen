{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "warn"
			},
			"security": {
				"noGlobalEval": "off",
				"noDangerouslySetInnerHtml": "off"
			},
			"suspicious": {
				"noDoubleEquals": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "single",
			"trailingCommas": "all",
			"semicolons": "asNeeded",
			"quoteStyle": "single"
		}
	}
}
